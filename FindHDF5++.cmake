if (NOT HDF5++_FIND_QUIETLY)
	message(STATUS "Searching for HDF5 C++ interface")
endif (NOT HDF5++_FIND_QUIETLY)


find_path(HDF5++_INCLUDE_DIRS hdf5++/hdfLLReading.h)
