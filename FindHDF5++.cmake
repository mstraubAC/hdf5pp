get_filename_component(HDF5++_LIBRARY_DIRS ${HDF5++_LIBRARY_DIRS} PATH)

if (HDF5++_INCLUDE_DIRS AND HDF5++_LIBRARY_DIRS)
	set(HDF5++_FOUND TRUE)
